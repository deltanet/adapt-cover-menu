{{import_globals}}

<div class="covermenu__intro" style="background-image: url({{_coverMenuAudio._backgroundGraphic.src}});">
	<div class="covermenu__intro-inner">

		{{#if _coverMenuAudio._audio._isEnabled}}
		<div class="audio">
			<div class="audio__inner">
				<button class="btn-icon audio__controls js-audio-toggle" id="{{_id}}" aria-label="">
					<div class="audio__controls-icon"></div>
				</button>
			</div>
		</div>
		{{/if}}

		{{#if displayTitle}}
    <div class="menu__title covermenu__title">

      {{#unless _disableAccessibleState}}
      <div class="js-heading"></div>
      {{/unless}}

      <div class="menu__title-inner covermenu__title-inner" {{#unless _disableAccessibleState}}aria-hidden="true"{{/unless}}>
        {{{compile displayTitle}}}
      </div>

    </div>
    {{/if}}

    {{#if subtitle}}
    <div class="menu__subtitle covermenu__subtitle">
      <div class="menu__subtitle-inner covermenu__subtitle-inner">
        {{{compile subtitle}}}
      </div>
    </div>
    {{/if}}

    {{#if body}}
    <div class="menu__body covermenu__body">
      <div class="menu__body-inner covermenu__body-inner">
        {{{compile body}}}
      </div>
    </div>
    {{/if}}

    {{#if instruction}}
    <div class="menu__instruction covermenu__instruction">
      <div class="menu__instruction-inner covermenu__instruction-inner">
        {{{compile instruction}}}
      </div>
    </div>
    {{/if}}

		<button class="btn-text menu__reveal-button js-covermenu-reveal-btn">
			{{{compile _coverMenuAudio.linkStartText}}}
		</button>

	</div>
</div>
