// in contentObjects.json, on each object to appear on the menu. This replaces the "_graphic" data object
//
// _type = menu
"_coverMenu":{
    "_introItemGraphic": {
        "alt": "",
        "src": "course/en/images/menu_returnArrow.png",
        "title": ""
    }
}
// _type = page
"_coverMenu":{
    "_backgroundGraphic": {
        "alt": "",
        "src": ""
    },
    "_indicatorGraphic": {
        "_isComplete": "course/en/images/menu_btn1_complete.png",
        "_isVisited": "course/en/images/menu_btn1_started.png",
        "_isLocked":"course/en/images/menu_btn1_notStarted.png",
        "_default":"course/en/images/menu_btn1_notStarted.png",
        "_accessibilityEnabled": "course/en/images/menu_btn1_notStarted.png"
    },
        "_ariaLabels": {
        "menuItemPage": "Page one, tab to View button to enter.",
        "menuViewButton": "Select here to view page one."
    } 
}

// set the intro screen on/off in all menus in the course.json
"_coverMenu":{
    "_introScreen": true
}

// Audio functionality - add to each 'page' element in contentObjects.json
"_audio": {
    "_isEnabled": true,
    "_showControls": true,
    "_autoplay": true,
    "_channel": 0,
    "_media": {
        "mp3": "course/en/audio/***.mp3",
        "ogg": "course/en/audio/***.ogg"
    }
}